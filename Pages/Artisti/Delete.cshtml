@page
@model RazorPagesUI.Pages.Artisti.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="custom-heading">Delete Artist</h1>

<h3>Are you sure you want to delete this artist?</h3>
<div class="form-custom">
    <h4>Artist Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Artist Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ArtistiColectie.ArtistName)</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="ArtistiColectie.ArtistId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-custom">Back to List</a>
        </div>
    </form>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}