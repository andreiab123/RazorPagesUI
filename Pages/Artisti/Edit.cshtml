@page
@model RazorPagesUI.Pages.Artisti.EditModel

@{
    ViewData["Title"] = "Edit Artist";
}

<h1 class="custom-heading">Edit Artist</h1>

<div class="row">
    <div class="col-md-6">
        <div class="form-custom">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ArtistiColectie.ArtistId" />

                <div class="form-group">
                    <label asp-for="ArtistiColectie.ArtistName" class="control-label label-custom">Nume Artist</label>
                    <input asp-for="ArtistiColectie.ArtistName" class="form-control form-control-custom" />
                    <span asp-validation-for="ArtistiColectie.ArtistName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ArtistiColectie.Genre" class="control-label label-custom">Gen Muzical</label>
                    <input asp-for="ArtistiColectie.Genre" class="form-control form-control-custom" />
                    <span asp-validation-for="ArtistiColectie.Genre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ArtistiColectie.BiggestHit" class="control-label label-custom">Cel Mai Mare Hit</label>
                    <input asp-for="ArtistiColectie.BiggestHit" class="form-control form-control-custom" />
                    <span asp-validation-for="ArtistiColectie.BiggestHit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ArtistiColectie.FavoriteGuitar" class="control-label label-custom">Chitara Favorita</label>
                    <input asp-for="ArtistiColectie.FavoriteGuitar" class="form-control form-control-custom" />
                    <span asp-validation-for="ArtistiColectie.FavoriteGuitar" class="text-danger"></span>
                </div>

                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-custom" />
                    <a asp-page="Index" class="btn btn-custom">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
