@page
@model RazorPagesUI.Pages.Artisti.IndexModel

@{
    ViewData["Title"] = "Artist Index";
}

<h1 class="custom-heading">Artist Index</h1>

<p>
    <a asp-page="Create" class="btn btn-custom">Create New Artist</a>
</p>

<div class="table-responsive">
    <table class="table table-custom">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ArtistiColectie[0].ArtistName)</th>
                <th>@Html.DisplayNameFor(model => model.ArtistiColectie[0].Genre)</th>
                <th>@Html.DisplayNameFor(model => model.ArtistiColectie[0].BiggestHit)</th>
                <th>@Html.DisplayNameFor(model => model.ArtistiColectie[0].FavoriteGuitar)</th>
                <th>Număr de hituri</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ArtistiColectie)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ArtistName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                    <td>@Html.DisplayFor(modelItem => item.BiggestHit)</td>
                    <td>@Html.DisplayFor(modelItem => item.FavoriteGuitar)</td>
                    <td>@item.Hits.Count</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ArtistId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.ArtistId" class="btn btn-sm btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.ArtistId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
